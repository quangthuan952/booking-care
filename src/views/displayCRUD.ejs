<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Get CRUD</title>
    <style>
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
        .btn-edit {
            background: aquamarine;
            border: none;
            outline: none;
            cursor: pointer;
            border-radius: 5px;
            padding: 3px 5px;
            display: inline-block;
           text-decoration: none;
            color: black;
        }
        .btn-delete {
            background: rosybrown;
            border: none;
            outline: none;
            cursor: pointer;
            border-radius: 5px;
            padding: 3px 5px;
            text-decoration: none;
            color: black;
        }
    </style>
</head>
<body>
<table style="width:70%; margin: 100px auto">
    <tr>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Address</th>
        <th>Action</th>
    </tr>
    <% for(let i=0; i < dataTable.length; i++) { %>
        <tr>
            <td><%= dataTable[i].email %></td>
            <td><%= dataTable[i].firstName %></td>
            <td><%= dataTable[i].lastName %></td>
            <td><%= dataTable[i].address %></td>
            <td>
                <a href="/edit-crud?id=<%= dataTable[i].id%>" class="btn-edit">Edit</a>
                <a href="" class="btn-delete">Delete</a>
            </td>
        </tr>
    <% } %>
</table>
</body>
</html>